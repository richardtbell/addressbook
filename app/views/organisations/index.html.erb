<p id="notice"><%= notice %></p>

<h1>Listing All Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.address %></td>
        <td><%= organisation.phone %></td>
        <td><%= link_to 'Show', organisation, class: 'btn btn--secondary' %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation), class: 'btn' %></td>
        <td><%= link_to 'Delete', organisation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn--warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class='link-block'>
  <%= link_to 'New Organisation', new_organisation_path, class: 'btn' %>
  <%= link_to 'People', employees_path, class: 'btn btn--secondary' %>
</div>